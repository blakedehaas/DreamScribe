<%- include ('../partials/head') %>
<link rel="stylesheet" href="/styles/login-register.css">
<head>
  <nav class="navbar navbar-expand-lg bg-light;" id="navbar">
      <div class="container-fluid">
          <a class="navbar-brand" href="/launch">
            <img src="/images/quill-white.svg" alt="logo" class="d-inline-block align-text-top logo">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                  <a class="nav-link all-buttons" href="/register">Register</a>
              </li>                  
                <li class="nav-item">
                      <a class="nav-link all-buttons active-button" href="/login" style="margin-right:30px;">Login</a>
                  </li>
              </ul>
          </div>
      </div>
  </nav>
</head>
<%- include ('../partials/message') %>
<main>
    <div class="container">
      <br>
      <h1 class="main-text" id="title">Login</h1>
      <br>
      <form action="/login" method="POST">
        <div class="form-group">
          <label for="username" class="main-text" id="subtitle">Username</label>
          <input type="text" name="username" maxlength="50">
        </div>
        <br>
        <div class="form-group">
            <label for="password" class="main-text" id="subtitle">Password</label>
            <input type="password" name="password" maxlength="60">
        </div>
        <br>
        <button type="submit" id="button">Login</button>
        <br>
        <br>
        <hr>
        <p>Don't have an account? <a href="/register">Register</a></p>
      </form>
      <br>
      <br>
      <br>
      <br>
    </div>
  </main>

<%- include ('../partials/footer') %>